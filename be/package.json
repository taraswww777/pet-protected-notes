{
  "name": "protected-notes-be",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "start:tsx": "tsx ./src/server.ts",
    "start:tsx:watch": "tsx --watch ./src/server.ts",
    "dev": "tsx --watch ./src/server.ts --noEmit",
    "lint": "eslint -c ./eslint.config.mjs",
    "lint:fix": "eslint --fix",
    "db:seeding": "tsx ./src/seeding.ts --seed",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate --config=./drizzle.config.ts"
  },
  "devDependencies": {
    "@electric-sql/pglite": "0.3.5"
  }
}
